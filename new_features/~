

---
- name: Play for psc cert renewal
  hosts: ubuntu
  become: yes
  become_user: root
  become_method: sudo
  tasks:
   - name: identify pfx file
     shell: "ls -lrt *.pfx"
     register: pfx
     delegate_to: localhost
     ignore_errors: yes
   - name: output the pfx result
     debug:
      msg: "{{pfx.stdout_lines[0].split()}}"
     delegate_to: localhost
     run_once: true

